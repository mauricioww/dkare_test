<h1>Appointment format!</h1>

<%= form_with(model: @appointment) do |form| %>
    
    <div class="field">
        <%= form.label :time %>
        <%= form.datetime_select :time %>
        <% @appointment.errors.full_messages_for(:time).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

<% end %>

<%= link_to 'Back', :back %>